unit Abstracts;

interface

uses System.SysUtils, System.Variants, System.Classes;

type
   { Тип объектного идентификатора }
   TObjectID = record
     CID : UInt64;
     OID : UInt64;
   end; { TObjectID}

type
    { Абстрактный класс хранимых идентифицируемых данных }
    TAbstract = class(TObject)
       property ObjectID : TObjectID read GetObjectID;
       property CID : UInt64;
       property OID : UInt64;
    private
      ObjectID : TObjectID;
      procedure SetObectID; abstract;
      function GetObjectID : TObjectID;
      function GetCID : Uint64;
      function GetOID : UInt64;
    end; {TAbstract}

implementation

